<?xml version="1.0" encoding="utf-8" ?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="1dp">
  <LinearLayout
        android:id="@+id/patient_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/fab_margin"
        android:background="@color/unknown_risk_background"
        android:orientation="vertical"
        tools:ignore="UselessParent"
    >

    <TextView
            android:id="@+id/title"
            style="@style/AppTheme.PatientDetails.headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mary Odhiambo"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableStart="@drawable/ic_baseline_add_24"
        android:drawablePadding="2dp"
        android:paddingStart="2dp"
        android:text="@string/delete_patient"
        android:textAppearance="?attr/textAppearanceBody2"
        app:backgroundTint="@color/high_risk"
        app:rippleColor="#FF0000" />
  </LinearLayout>
</FrameLayout>
