<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="10dp"
                android:color="@color/textColorLightBlue" />
            <corners android:radius="20dp"/>
            <solid android:color="@color/transparent" />
        </shape>
    </item>
    <item
        android:top="4dp"
        android:left="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/textColorLightBlue" />
            <solid android:color="@color/textColorLightBlue" />
        </shape>
    </item>
</layer-list>