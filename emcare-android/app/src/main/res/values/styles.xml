<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorTransparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/AppStyle.ActionMode</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="questionnaire_theme">@style/Questionnaire</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_backgorund</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style
        name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar"
        />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
    </style>
    <style name="AppTheme.PatientDetails">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="AppTheme.PatientDetails.headline">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="AppTheme.PatientDetails.Subtitle2">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>
    <style name="AppTheme.PatientDetails.body2">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="AppStyle.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/colorAccent</item>
        <item name="backgroundSplit">@color/colorAccent</item>
    </style>

    <style name="Style_BottomSheet_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/font_13sp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <!--        <item name="android:backgroundDimEnabled">false</item>-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorWhite</item>
    </style>

    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextView.Big">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/_28ssp</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="TextView.Medium.Black">
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

    <style name="TextView.SemiBold">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="TextView.SemiBold.Black">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

    <style name="TextView.Small">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="TextView.Small.Black">
        <item name="android:textColor">@color/textColorBlack80</item>
    </style>

    <style name="TextView.Login" parent="TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/_24sdp</item>
        <item name="elevation">@dimen/_8sdp</item>
        <item name="backgroundTint">@color/buttonColor</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:minHeight">@dimen/_56sdp</item>
        <item name="android:paddingStart">@dimen/_64sdp</item>
        <item name="android:paddingEnd">@dimen/_64sdp</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="borderRound">@dimen/_16sdp</item>
        <item name="android:minHeight">@dimen/_42sdp</item>
        <item name="strokeColor">@color/textColorLightBlue</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
    </style>
    
    <style name="Questionnaire" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="groupHeaderTextAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
    </style>
</resources>
